<div class="container_form col-3 mx-auto">
{{ form_start(registrationForm) }}
      <form class="form-signin mx-auto">
        <div class="d-flex justify-content-center">
          <a href="">
            <img
              class="mb-4 mx-auto"
              src="{{asset('/images/logo/ND_Logo.png')}}"
              alt="logo image"
              width="300"
              height="auto"
            />
          </a>
        </div>
        <h1 class="h3 mb-3 fw-normal">S'inscrire</h1>

        <div class="mb-3">
        {{ form_label(registrationForm.email, 'Email') }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-2">
        {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
          {{ form_widget(registrationForm.plainPassword, {
            label: 'Password',
            'attr': {'class': 'form-control'}
        }) }}
        </div>

         {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'checkbox mb-4'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation') }}
        
        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}
        
        <button class="w-100 btn btn-lg btn-primary" type="submit">
          S'inscrire
        </button>
        <div
        <p>Vous avez déjà un compte?<a href="{{ path('app_login') }}"> Identifiez-vous!</a></p>
        <p class="mt-5 mb-3 text-muted">© Nouvelles Donnes - 2022</p>
      </form>
      {{ form_end(registrationForm) }}
    </div>

{% endblock %}